{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "BodyParagraph": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "paragraph": {
                    "type": "string"
                }
            },
            "required": [
                "paragraph"
            ]
        },
        "BulletEntry": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "bullet": {
                    "type": "string"
                }
            },
            "required": [
                "bullet"
            ]
        },
        "CV": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "email": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "expertise_tags": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "headline": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "location": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "name": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "phone": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "sections": {
                    "type": "object",
                    "additionalProperties": false,
                    "patternProperties": {
                        "": {
                            "anyOf": [
                                {
                                    "type": "array"
                                },
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        }
                    },
                    "properties": {
                        "courses": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/ExperienceEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "education": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/EducationEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "experience": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/ExperienceEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "hobbies": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/BulletEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "honors_and_awards": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/ExperienceEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "motivation": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "publications": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/PublicationEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "references": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "skills": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/OneLineEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "summary": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "values": {
                            "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/BulletEntry"
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        }
                    }
                },
                "social_networks": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/SocialNetwork"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "website": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        },
        "Content": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "body": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/BodyParagraph"
                    }
                },
                "closing": {
                    "type": "string"
                },
                "opening": {
                    "type": "string"
                },
                "salutation": {
                    "type": "string"
                }
            },
            "required": [
                "closing",
                "opening",
                "salutation"
            ]
        },
        "Date": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "integer"
                },
                {
                    "type": "null"
                }
            ]
        },
        "EducationEntry": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "area": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "company": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "date": {
                    "$ref": "#/$defs/Date"
                },
                "degree": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "end_date": {
                    "$ref": "#/$defs/ExactDate"
                },
                "highlights": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "institution": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "location": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "position": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "start_date": {
                    "$ref": "#/$defs/Date"
                },
                "summary": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        },
        "ExactDate": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "integer"
                },
                {
                    "const": "present"
                },
                {
                    "type": "null"
                }
            ]
        },
        "ExperienceEntry": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "company": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "date": {
                    "$ref": "#/$defs/Date"
                },
                "end_date": {
                    "$ref": "#/$defs/ExactDate"
                },
                "highlights": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "location": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "position": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "start_date": {
                    "$ref": "#/$defs/Date"
                },
                "summary": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        },
        "Letter": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "content": {
                    "$ref": "#/$defs/Content"
                },
                "metadata": {
                    "$ref": "#/$defs/Metadata"
                },
                "recipient": {
                    "$ref": "#/$defs/Recipient"
                },
                "sender": {
                    "$ref": "#/$defs/Sender"
                }
            },
            "required": [
                "content",
                "metadata",
                "recipient",
                "sender"
            ]
        },
        "Metadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "date": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "const": "auto"
                        }
                    ]
                },
                "position_applied": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "date"
            ]
        },
        "OneLineEntry": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "details": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                }
            },
            "required": [
                "details",
                "label"
            ]
        },
        "PublicationEntry": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "authors": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "date": {
                    "$ref": "#/$defs/Date"
                },
                "doi": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "journal": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "summary": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "title": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "url": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "title"
            ]
        },
        "Recipient": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "address": {
                    "type": "string"
                },
                "company": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "title": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "address",
                "company",
                "name"
            ]
        },
        "Sender": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "address": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "email": {
                    "type": "string"
                },
                "github": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "linkedin": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "name": {
                    "type": "string"
                },
                "phone": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "email",
                "name"
            ]
        },
        "SocialNetwork": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "network": {
                    "anyOf": [
                        {
                            "const": "LinkedIn"
                        },
                        {
                            "const": "GitHub"
                        },
                        {
                            "const": "GitLab"
                        },
                        {
                            "const": "Instagram"
                        },
                        {
                            "const": "Twitter"
                        },
                        {
                            "const": "X"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "username": {
                    "type": "string"
                }
            },
            "required": [
                "network",
                "username"
            ]
        }
    },
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "cv": {
            "$ref": "#/$defs/CV"
        },
        "letter": {
            "$ref": "#/$defs/Letter"
        }
    }
}
